#include <LoRa.h>
#include <SPI.h>

#define ss 18
#define rst 14
#define dio0 26

int counter = 1;
String lorastring;

void setup() {
  Serial.begin(115200);

  Serial.println("");
  Serial.println("LoRa Receiver Starting...");
  Serial.println("-------------------------");

  SPI.begin(5, 19, 27, 18);
  LoRa.setPins(ss, rst, dio0);

  if (!LoRa.begin(868E6)) {
    Serial.println("LoRa nicht gestartet!");
    while (1);
    delay(1000);
  }
  Serial.println("LoRa gestartet");
  delay(5000);
}

void loop() {
  int paketlaenge = LoRa.parsePacket();

  if (paketlaenge) { 
    Serial.println("Paket empfangen!");
    lora_paket();   
    Serial.print("Inhalt des Pakets: ");
    Serial.println(lorastring);
  }
}

void lora_paket() {
  lorastring = "";  // Leeren Sie den String zu Beginn
  while (LoRa.available()) {
    lorastring += (char)LoRa.read();
  }
}

String split_string(String data, char separator, int index) {
  int found = 0;
  int strIndex[] = { 0, -1 };
  int maxIndex = data.length();

  for (int i = 0; i <= maxIndex && found <= index; i++) {
    if (data.charAt(i) == separator || i == maxIndex) {
      found++;
      strIndex[0] = strIndex[1] + 1;
      strIndex[1] = (i == maxIndex) ? i + 1 : i;
    }
  }
  return found > index ? data.substring(strIndex[0], strIndex[1]) : "";
}
